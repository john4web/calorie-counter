<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">


    <Button
        android:id="@+id/fragment_settings_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="16dp"
        android:text="Speichern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_settings_button_cancel" />


    <TextView
        android:id="@+id/fragment_settings_textView_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="33dp"
        android:text="Einstellungen"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_settings_textView_calorieHeading"
        app:layout_constraintEnd_toEndOf="@+id/fragment_settings_textView_calorieHeading" />

    <TextView
        android:id="@+id/fragment_settings_textView_litresHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximale Liter pro Tag"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_settings_input_litres"
        app:layout_constraintStart_toStartOf="@+id/fragment_settings_input_litres" />

    <TextView
        android:id="@+id/fragment_settings_textView_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="l"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/fragment_settings_input_litres"
        app:layout_constraintStart_toEndOf="@+id/fragment_settings_input_litres" />

    <TextView
        android:id="@+id/fragment_settings_textView_calorieHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="70dp"
        android:text="Maximale Kalorien pro Tag"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_settings_textView_litresHeading"
        app:layout_constraintEnd_toEndOf="@+id/fragment_settings_input_litres" />

    <EditText
        android:id="@+id/fragment_settings_input_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="2000"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/fragment_settings_textView_calorieHeading"
        app:layout_constraintTop_toBottomOf="@+id/fragment_settings_textView_calorieHeading" />

    <TextView
        android:id="@+id/fragment_settings_textView_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="kcal"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/fragment_settings_input_kcal"
        app:layout_constraintStart_toEndOf="@+id/fragment_settings_input_kcal" />

    <EditText
        android:id="@+id/fragment_settings_input_litres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="3"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/fragment_settings_button_cancel"
        app:layout_constraintStart_toStartOf="@+id/fragment_settings_button_cancel" />

    <Button
        android:id="@+id/fragment_settings_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginBottom="16dp"
        android:text="Abbrechen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>